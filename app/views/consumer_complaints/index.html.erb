<p id="notice"><%= notice %></p>

<h1>Consumer Complaints</h1>
<%= paginate @consumer_complaints %>
<table class="table table-bordered table-striped table-responsive table-condensed"> 
  <thead>
    <tr>
      <th>Date received</th>
      <th>Product</th>
      <th>Sub product</th>
      <th>Issue</th>

      <th>Company</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Tags</th>

      <th>Submitted via</th>
      <th>Date sent to company</th>
      <th>Timely response</th>
      <th>Consumer disputed</th>
      <th>Complaint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumer_complaints.each do |consumer_complaint| %>
      <tr>
        <td><%= consumer_complaint.date_received  %></td>
        <td><%= consumer_complaint.product %></td>
        <td><%= consumer_complaint.consumer_complaint_narrative %></td>
        <td><%= consumer_complaint.company_public_response %></td>
        <td><%= consumer_complaint.company %></td>
        <td><%= consumer_complaint.state %></td>
        <td><%= consumer_complaint.zip_code %></td>
        <td><%= consumer_complaint.tags %></td>
    
        <td><%= consumer_complaint.submitted_via %></td>
        <td><%= consumer_complaint.date_sent_to_company %></td>

        <td><%= consumer_complaint.timely_response %></td>
        <td><%= consumer_complaint.consumer_disputed %></td>
        <td><%= consumer_complaint.complaint_id %></td>
        <td><%= link_to 'Show', consumer_complaint %></td>
        <td><%= link_to 'Edit', edit_consumer_complaint_path(consumer_complaint) %></td>
        <td><%= link_to 'Destroy', consumer_complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4>Import Complaints</h4> 

<%= form_tag import_consumer_complaints_path, multipart: true do %>
  <%= file_field_tag :file %>
    <%= submit_tag "Upload Complaints" %>

<% end %>

<%= link_to 'New Consumer Complaint', new_consumer_complaint_path %>
